<div class="data-form">
  <form class="form-signin" action="/users/create" method="POST">
    <h2 class="form-signin-heading">Create a new user:</h2>
    <label for="inputFirstName">First Name</label>
    <input type="text" name="first" id="inputFirstName" class="form-control" placeholder="First" autofocus value=<%= locals.name && locals.name.first ? locals.name.first : "" %> >
    <label for="inputLastName">First Name</label>
    <input type="text" name="last" id="inputLastName" class="form-control" placeholder="Last" value=<%= locals.name && locals.name.last ? locals.name.last : "" %> >
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" >
    <label for="inputEmail">Email address</label>
    <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Email address"  value=<%= locals.email ? locals.email : "" %> >
    <label for="inputZipCode">Zip Code</label>
    <input type="text" name="zipCode" id="inputZipCode" pattern="\d*" class="form-control" placeholder="Zip Code"  value=<%= locals.zipCode ? locals.zipCode : "" %> >
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
  </form>
</div>
